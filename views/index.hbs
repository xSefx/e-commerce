<script src="/js/index.js" defer></script>

<div class="container">
  <h3>Категория</h3>
  <ul class="category-list">
    <a href="/product/allProduct" class="btn btn-primary">Все категории</a>

    {{#each categoryList}}
    <button class="btn btn-primary" data-btn="category-btn" id="{{this._id}}">{{this.name}}</button>
    {{/each}}
  </ul>

