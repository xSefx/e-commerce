<link rel="stylesheet" href="/css/style.css">

<table class="table">
  <thead>
    <tr>
      <th scope="col">Имя</th>
      <th scope="col">email</th>
      <th scope="col">Доступ</th>
      <th scope="col">Блокирован</th>
      <th scope="col">Кнопки силы</th>
    </tr>
  </thead>
  <tbody>
    {{#each user}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.role}}</td>
      {{#if this.blocked}}
      <td>Да</td>
      {{else}}
      <td>нет</td>
      {{/if}}
      <td id='{{this._id}}' class="admin-edit">
        <span class="las la-ban" data-type="user"></span>
        <span class="las la-trash" data-type="user"></span>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
